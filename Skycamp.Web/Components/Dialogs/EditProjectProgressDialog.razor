@implements IDialogContentComponent<EditProjectProgressDialogModel>

@inject IToastService ToastService
@inject ApplicationApiClient ApiClient

<FluentEditForm Model="@Content" OnValidSubmit="SaveAsync">
    <FluentDialogHeader ShowDismiss="true">
        <FluentStack VerticalAlignment="VerticalAlignment.Center">
            <FluentIcon Value="@(new Icons.Regular.Size24.WindowApps())" />
            <FluentLabel Typo="Typography.PaneHeader">
                @(Dialog.Instance.Parameters.Title != null ? Dialog.Instance.Parameters.Title : "Edit Project Progress")
            </FluentLabel>
        </FluentStack>
    </FluentDialogHeader>

    <FluentDialogBody>
        <DataAnnotationsValidator />

        <FluentGrid>
            <FluentGridItem xs="12">
                <FluentLabel>Progress: @Content.Progress.ToString("F0")%</FluentLabel>
                <FluentSlider Min="0" Max="100" Step="5" @bind-Value="@Content.Progress" Style="width: 100%;" />
                <FluentValidationMessage For="@(() => Content.Progress)" />
            </FluentGridItem>
        </FluentGrid>

        <FluentDialogFooter>
            <FluentButton Appearance="Appearance.Accent" Type="ButtonType.Submit" Loading=@saveLoading>Save</FluentButton>
            <FluentButton Appearance="Appearance.Neutral" OnClick="@CancelAsync">Cancel</FluentButton>
        </FluentDialogFooter>
    </FluentDialogBody>
</FluentEditForm>

@code {
    [Parameter]
    public EditProjectProgressDialogModel Content { get; set; } = default!;

    [CascadingParameter]
    public FluentDialog Dialog { get; set; } = default!;

    private bool saveLoading = false;

    private async Task SaveAsync()
    {
        try
        {
            saveLoading = true;

            var result = await ApiClient.EditProjectProgressAsync(Content.WorkspaceId, Content.Id, new EditProjectProgressRequest
            {
                Progress = Content.Progress / 100m
            });

            if (!result.IsSuccess)
            {
                ToastService.ShowError($"Failed to update project progress: {result.ErrorMessage}");
            }
            else
            {
                ToastService.ShowSuccess($"Project progress updated successfully.");
                await Dialog.CloseAsync(DialogResult.Ok(Content.Progress));
            }
        }
        finally
        {
            saveLoading = false;
        }
    }

    private async Task CancelAsync()
    {
        await Dialog.CloseAsync(DialogResult.Cancel());
    }
}
